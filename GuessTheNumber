# template for "Guess the number" mini-project
# input will come from buttons and an input field
# all output for the game will be printed in the console
import simplegui
import random
import math

#variable to specify the range of game: (0-100) or (0-1000)
range = 100
#variable to determine number of guesses. Set to 7 to begin
numGuesses = 7
#Random number generated by computer
compNum = 0

def new_game():
    
    global compNum
    global numGuesses
    compNum = random.randrange(0,range)
    print "New Game.. Range is from 0 - " + str(range)
    print "Number of guesses remaining : " + str(numGuesses) 
    pass


# define event handlers for control panel
def range100():
    # button that changes the range to [0,100) and starts a new game 
    global numGuesses
    global range 
    numGuesses = 7
    range = 100
    print
    new_game()
    pass
    
def range1000():
    # button that changes the range to [0,1000) and starts a new game     
    global numGuesses
    global range
    numGuesses = 10  
    range = 1000
    print
    new_game()
    pass
    
def input_guess(guess):
    # main game logic goes here	
    global numGuesses
    numGuesses = numGuesses - 1
    
    print "Your Guess : " + str(guess)
    
    guess = int(guess)   
    
    if guess >= range:
        print "Invalid input!!"
        print
        return
    
    if guess == compNum:
        print "Correct! Congratulations"
        print
        numGuesses = 7
        new_game()
        return
        
    elif guess > compNum:
        print "Lower!"
            
    else:
        print "Higher!"
                
    if numGuesses != 0:
        print
        print "Number of guesses remaining : " + str(numGuesses)
        pass
    else:
        print
        print "Sorry no more tries left!!"
        print
        numGuesses = 7
        new_game()
        
# create frame
frame = simplegui.create_frame('Guess the Number',200,200)
frame.add_button('Range: 0 - 100',range100,200)
frame.add_button('Range: 0 - 1000',range1000,200)
frame.add_input('Your Guess?', input_guess , 200)

# call new_game 
new_game()

